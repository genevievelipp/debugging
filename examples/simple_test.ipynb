    "def factorial(n):\n",
    "    if n == 1 or n == 0:\n",
    "        return 1\n",
    "    else:\n",
    "        fact = 1\n",
    "        for i in range(n):\n",
    "            fact *= i\n",
    "        return fact"
   ]
